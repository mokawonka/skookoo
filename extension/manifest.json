{
  "manifest_version": 3,
  "name": "Skookoo Highlighter",
  "version": "1.0",
  "description": "Highlight text and react with Skookoo.",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["http://localhost:3000"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Skookoo token"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}
