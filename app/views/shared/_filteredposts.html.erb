<% if records.any? %>

  <% records.each do |highlight| %>
    <%= render 'shared/post', highlight: highlight %>
    <hr>
  <% end %>

  <div class="d-flex justify-content-center mt-4 mb-4">
    <%== pagy_bootstrap_nav(pagy, link_extra: 'data-remote="true"') if pagy.pages > 1 %>
  </div>

<% else %>
  
  <div class="text-center py-5 text-muted">
    <div class="mb-3">
      <i class="fa fa-users-slash fs-1"></i>
    </div>

    <h5 class="mb-2">Nothing to display</h5>
    <p class="mb-0">
      You’re not following anyone yet,<br>
      or the people you follow haven’t posted.
    </p>
  </div>

<% end %>