<div class="text-center">

    <h4 class=pb-3> Log in </h4>

    <%= form_with(scope: :session, url: login_path) do |f| %>
        <div class="form-group">
            <%= f.text_field :username, spellcheck: false, placeholder: "username", required: true, class: "form-control" %>
        </div>
        <br>
        <div class="form-group">
            <%= f.password_field :password, placeholder: "password", required: true, class: "form-control" %>
        </div>
        <br>
        <div class="form-group">
            <%= f.submit "Log in", class: "btn btn-success" %>
        </div>
    <% end %>

    <hr class="mt-5 mb-5">

    <div class=pt-5>
        <p>Don't have an account ?</p>
        <%=link_to "Sign up in 1 sec", signup_path, class: "btn btn-sm btn-warning" %>

    </div> 
</div>
