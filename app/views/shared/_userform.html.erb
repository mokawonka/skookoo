<%= form_with(model: @user) do |form| %>

    <div class="field">
        <%= form.text_field :username, spellcheck: false , placeholder: "username",  required: true %>
    </div>
    <br>
    <div class="field">
        <%= form.text_field :email, spellcheck: false, placeholder: "email",  required: true %>
    </div>
    <br>
    <div class="field">
        <%= form.password_field :password, placeholder: "password", required: true %>
    </div>
    <br>
    <div class="field">
        <%= form.password_field :password_confirmation, placeholder: "password confirmation", required: true %>
    </div>
    <br>
    <div class="actions">
        <%= form.submit value, class: "btn btn-success"%>
    </div>

<% end %>